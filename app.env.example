# ==============================================
# TELEGRAM BOT APPLICATION CONFIGURATION
# ==============================================
# Скопируйте этот файл в .env и заполните значения:
# cp app.env.example .env

# ==============================================
# TELEGRAM BOT SETTINGS
# ==============================================
BOT_TOKEN=1234567890:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
BOT_USERNAME=your_bot_username
BOT_WEBHOOK_URL=https://yourdomain.com/webhook

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL (основная база данных)
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/tgbot

# Redis (кэширование и очереди)
REDIS_URL=redis://localhost:6379/0

# ==============================================
# AI SERVICE CONFIGURATION
# ==============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Claude (Anthropic)
ANTHROPIC_API_KEY=sk-ant-api03-your-claude-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW=60000       # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=30    # Max requests per window

# ==============================================
# ANTI-SPAM SETTINGS
# ==============================================
ANTI_SPAM_ENABLED=true
ANTI_SPAM_MAX_MESSAGES=5      # Max messages per minute
ANTI_SPAM_BAN_DURATION=300    # Ban duration in seconds (5 minutes)

# ==============================================
# CAPTCHA SETTINGS
# ==============================================
CAPTCHA_ENABLED=true
CAPTCHA_TIMEOUT=300           # 5 minutes timeout
CAPTCHA_MAX_ATTEMPTS=3        # Max wrong attempts

# ==============================================
# AI CHAT LIMITS
# ==============================================
AI_DAILY_LIMIT=50             # Messages per user per day
AI_CONTEXT_LIMIT=10           # Previous messages to keep in context
AI_MAX_TOKENS=4000            # Max tokens per response

# ==============================================
# WEBHOOK SETTINGS (PRODUCTION)
# ==============================================
WEBHOOK_HOST=yourdomain.com
WEBHOOK_PORT=8443
WEBHOOK_SSL_CERT=/path/to/cert.pem
WEBHOOK_SSL_KEY=/path/to/key.pem

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn-here

# ==============================================
# BACKUP SETTINGS
# ==============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *     # Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=7

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Uncomment for development
# DEBUG=true
# VERBOSE_LOGGING=true
# MOCK_AI_RESPONSES=false

# ==============================================
# SECURITY SETTINGS
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key

# Session security
SESSION_SECRET=your-session-secret-key-here

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Weather API
WEATHER_API_KEY=your-weather-api-key

# News API
NEWS_API_KEY=your-news-api-key

# Translation API
TRANSLATE_API_KEY=your-translation-api-key

# ==============================================
# DOCKER ENVIRONMENT
# ==============================================
# Если приложение запускается в Docker:
# DATABASE_URL=postgresql://postgres:your_secure_password@postgres:5432/tgbot
# REDIS_URL=redis://redis:6379/0

# ==============================================
# PRODUCTION NOTES
# ==============================================
# 1. Обязательно смените все ключи и токены!
# 2. Используйте сильные пароли и ключи (минимум 32 символа)
# 3. Включите HTTPS для webhook в продакшене
# 4. Настройте мониторинг и логирование
# 5. Регулярно обновляйте API ключи
# 6. Используйте переменные окружения, не храните секреты в коде
# 7. Настройте firewall и ограничьте доступ к базам данных 