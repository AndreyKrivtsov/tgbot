{
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --env-file .env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env.production dist/index.js",
    "prod": "npm run build && npm start",
    "copy": "npx copyfiles -f src/services/weather/image.jpg dist/services/weather/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "generate": "npx drizzle-kit generate",
    "push": "npx drizzle-kit push",
    "migrate": "node drizzle/migrate.js migrate",
    "studio": "npx drizzle-kit studio",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest src/__tests__/unit",
    "test:integration": "jest src/__tests__/integration",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node drizzle/migrate.js migrate",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@google/generative-ai": "^0.22.0",
    "@verrou/core": "^0.5.1",
    "axios": "^1.8.1",
    "canvas": "^3.1.0",
    "copyfiles": "^2.4.1",
    "drizzle-orm": "^0.39.3",
    "env-var": "^7.5.0",
    "fastify": "^5.3.3",
    "gramio": "^0.2.3",
    "https-proxy-agent": "^7.0.6",
    "pg": "^8.13.3",
    "postgres": "^3.4.7",
    "redis": "^5.5.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.20.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.4",
    "typescript": "^5.7.3"
  }
}
